{
  "expo": {
    "name": "Salgados do Marquês",
    "slug": "salgados-app",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo_icon.png",
    "scheme": "salgadosapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "pt.salgadosdomarques.salgadosapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Utilizamos a sua localização para encontrar as lojas Coinxinhas mais próximas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#910202",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "pt.salgadosdomarques.salgadosapp",
      "versionCode": 2,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo_icon.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#910202",
          "dark": {
            "backgroundColor": "#910202"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "API_BASE_URL": "https://api.salgadosdomarques.pt/api/v1",
      "router": {},
      "eas": {
        "projectId": "44177758-910b-4b2b-96ce-d59645f142f2"
      }
    },
    "owner": "salgadosmarques"
  }
}
